# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=4000
API_VERSION=v1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/wishmasters_db?schema=public"

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# COMPETITION PASSWORD ENCRYPTION
# ===========================================
COMPETITION_PASSWORD_SALT_ROUNDS=10

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=wishmasters-spotball

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# ADMIN DEFAULT CREDENTIALS (Development Only)
# CHANGE THESE IN PRODUCTION!
# ===========================================
ADMIN_EMAIL=admin@wishmasters.com
ADMIN_PASSWORD=ChangeThisPassword123!
