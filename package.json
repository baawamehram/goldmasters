{
  "name": "goldmasters-spotball",
  "version": "1.0.0",
  "private": true,
  "description": "Goldmasters Spot-the-Ball Competition Platform",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "pnpm run --parallel dev",
    "build": "pnpm run -r --workspace-concurrency=1 --filter db --filter web --filter api build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "db:generate": "pnpm --filter db generate",
    "db:push": "pnpm --filter db push",
    "db:migrate": "pnpm --filter db migrate",
    "clean": "pnpm run --recursive clean"
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "prisma",
      "@prisma/client",
      "@prisma/engines"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}