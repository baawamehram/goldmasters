{
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm install --no-frozen-lockfile && pnpm -w run db:generate && pnpm run build",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/$1"
    }
  ]
}
