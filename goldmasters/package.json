{
  "name": "goldmasters-spotball",
  "version": "1.0.0",
  "private": true,
  "description": "Goldmasters Spot-the-Ball Competition Platform",
  "packageManager": "pnpm@8.15.9",
  "scripts": {
    "dev": "pnpm --parallel dev:web dev:api",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter web build && pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:db": "pnpm --filter db build",
    "start": "pnpm --filter web start",
    "start:api": "pnpm --filter api start",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "db:generate": "pnpm --filter db generate",
    "db:push": "pnpm --filter db push",
    "db:migrate": "pnpm --filter db migrate",
    "clean": "pnpm --recursive run clean"
  },
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/*"
  ],
  "pnpm": {
    "allowedBuiltDependencies": [
      "prisma",
      "@prisma/client",
      "@prisma/engines"
    ]
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8"
  }
}
